#!/usr/bin/awk -f

BEGIN {
    line_number = 0
    delete lines[0]
    key = ARGV[1]
    key = tolower(key)
    delete ARGV[1]
}

/^### / {
    if (line_number > 0) {
        exit
    }
    gsub(/^### /, "")
    _key = tolower($0)
    if (_key == key) {
        line_number = 1
    } else {
        line_number = 0
    }
    next
}

!/^### / {
    if (line_number > 0) {
        lines[line_number-1] = $0
        line_number = line_number + 1
    }
}

END {
    for (i=1; i<line_number-2; i++) {
        print lines[i]
    }
    if (lines[i] != "") {
        print lines[i]
    }
}
