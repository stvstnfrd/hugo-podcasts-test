#!/usr/bin/env python
import argparse
import os
import sys


def get_parser():
    parser = argparse.ArgumentParser(
        prog = os.path.basename(__file__),
        description = 'Update a feed, based on a Github Issues post',
        # epilog = 'Note: If skip-images is set, overwrite-images will be ignored.',
    )
    parser.add_argument(
        'feed_file',
        action='store',
        help='Which Markdown post are we updating?',
    )
    parser.add_argument(
        'issue_file',
        action='store',
        help='Which Markdown issue are we loading content from?',
    )
    return parser


def _clean(args):
    args = dict(args.__dict__)
    return args


if __name__ == '__main__':
    parser = get_parser()
    args = parser.parse_args()
    args = _clean(args)
    try:
        from rss2hugo.models import Feed
    except ImportError:
        print('Unable to locate the rss2hugo package; try reinstalling...')
        sys.exit(1)
    try:
        feed_file = args['feed_file']
        issue_file = args['issue_file']
        feed = Feed.from_post(feed_file)
        merged = feed.merge(issue_file)
        merged.save(feed_file)
    except KeyboardInterrupt:
        pass
