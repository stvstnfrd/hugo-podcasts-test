{{- $imgMain := partial "call/get-image.xml" . }}
{{- $page := . }}
{{- with $imgMain }}
    <image>
        <link>{{ $page.Permalink }}</url>
        <title>{{ $page.Title | default site.Title }}</title>
        <url>{{ .Permalink }}</url>
        {{- with $page.Description | default site.Params.Description | default $page.Summary }}
        <description>{{ . }}</description>
        {{- end }}
        {{- with .Height }}
        <height>{{ . }}</height>
        {{- end }}
        {{- with .Width }}
        <width>{{ . }}</width>
        {{- end }}
    </image>
{{- end -}}
