#!/usr/bin/env python
import argparse
import os
import sys


def get_parser():
    parser = argparse.ArgumentParser(
        prog = os.path.basename(__file__),
        description = 'Fetch a field from a Github Issue',
        # epilog = 'Note: If skip-images is set, overwrite-images will be ignored.',
    )
    parser.add_argument(
        'key',
        action='store',
        help='Which field to retrieve?',
    )
    parser.add_argument(
        'issue_file',
        action='store',
        help='Which Markdown issue are we loading content from?',
    )
    return parser


def _clean(args):
    args = dict(args.__dict__)
    return args


if __name__ == '__main__':
    parser = get_parser()
    args = parser.parse_args()
    args = _clean(args)
    try:
        from rss2hugo.github import Issue
    except ImportError:
        print('Unable to locate the rss2hugo package; try reinstalling...')
        sys.exit(1)
    try:
        key = args['key']
        key = key.lower()
        issue_file = args['issue_file']
        issue = Issue.from_file(issue_file)
        issue = issue.to_dict()
        value = issue.get(key, '')
        print(value)
    except KeyboardInterrupt:
        pass
